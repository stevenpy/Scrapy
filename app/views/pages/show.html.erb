<div class="flex justify-between">
  <h1 class="font-bold text-2xl truncate">
    <%= link_to "<", root_path, class: "p-1 rounded hover:bg-gray-100" %>
    <%= @page.name %>
  </h1>
  <div>
    <div class="flex gap-1">
      <%= button_to "Run", page_check_path(@page), class: "border border-gray-200 rounded shadow px-2 py-1 hover:bg-gray-100" %>
      <%= link_to "Edit", edit_page_path(@page), class: "border border-gray-200 rounded shadow px-2 py-1 hover:bg-gray-100" %>
    </div>
  </div>
</div>

<%= link_to @page.url, @page.url, class: "text-gray-7OO", target: :_blank %>

<div class="mt-4">
  <h2 class="font-medium">Results</h2>
  <%= render @page.results.order(created_at: :desc) %>
</div>