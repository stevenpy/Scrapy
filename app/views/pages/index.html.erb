<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Pages" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Pages</h1>
    <%= link_to "New page", new_page_path, class: "border border-gray-200 rounded shadow px-2 py-1 hover:bg-gray-100" %>
  </div>

  <div id="pages" class="flex flex-col divide-y divide-gray-200">
    <%= render @pages %>
  </div>
</div>
